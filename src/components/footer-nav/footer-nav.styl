@import "../../assets/css/mixins.styl"

.footer_guide // footer
  top-border-1px(#ccc)
  position fixed
  z-index 100
  left 0
  right 0
  bottom 0
  background-color #fafafa
  width 100%
  height 0.97rem
  /*弹性布局*/
  display flex
  .guide_item
    display flex
    flex 1
    text-align center
    flex-direction column
    align-items center
    margin 0.05rem
    color #666666
    text-decoration none
    padding-top .15rem
    box-sizing border-box
    &.on
      color #b4282d
    span
      .iconfont
        font-size 0.3rem